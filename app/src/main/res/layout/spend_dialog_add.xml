<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="#FFE1E1"
    android:layout_margin="5dp"
    app:cardCornerRadius="15dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFE1E1"
        android:padding="10dp">

        <Spinner

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:background="@drawable/rounded_corner"
            android:minHeight="48dp"
            android:textSize="15dp"
            android:fontFamily="@font/fraunces"
            android:id="@+id/spnTenTCAdd"/>

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:background="@drawable/rounded_corner"
            android:minHeight="48dp"
            android:textSize="15dp"
            android:fontFamily="@font/fraunces"
            android:id="@+id/edtLoaitdAdd"/>

        <EditText

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/rounded_corner"
            android:minHeight="48dp"
            android:textSize="15dp"
            android:fontFamily="@font/fraunces"
            android:id="@+id/edtGiatienADD"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp">

            <TextView
                android:id="@+id/tvCancelAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="30dp"
                android:text="Cancel"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvAdd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_margin="5dp"
                android:layout_marginTop="4dp"
                android:layout_marginEnd="48dp"
                android:text="Add"
                android:textSize="20dp"
                app:layout_constraintEnd_toStartOf="@+id/tvCancelAdd"
                app:layout_constraintTop_toTopOf="parent" />

            <!--            <ImageButton-->
<!--                android:id="@+id/btCancelAdd"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginTop="30dp"-->
<!--                android:background="@mipmap/cancel"-->
<!--                android:layout_marginLeft="50dp"/>-->

<!--            <ImageButton-->
<!--                android:id="@+id/btSaveAdd"-->
<!--                android:layout_width="50dp"-->
<!--                android:layout_height="50dp"-->
<!--                android:layout_marginTop="30dp"-->
<!--                android:background="@mipmap/save"-->
<!--                android:layout_marginLeft="170dp"/>-->

        </androidx.constraintlayout.widget.ConstraintLayout>



    </LinearLayout>

</androidx.cardview.widget.CardView>